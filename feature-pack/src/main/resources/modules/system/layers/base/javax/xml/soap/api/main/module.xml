<module xmlns="urn:jboss:module:1.9" name="javax.xml.soap.api">
    <dependencies>
        <module name="javax.activation.api" export="true"/>
        <module name="javax.api"/>
        <module name="org.jboss.modules"/>
        <!-- This module does not exist by default but if system property
             jboss.saaj.api.1_3 is going to be set to true a module with this name that provides
             the SAAJ 1.3 API must be installed, and this module will export its resources -->
        <module name="javax.xml.soap.api.1_3" optional="true" export="true"/>
    </dependencies>

    <resources>
        <artifact name="${org.jboss.spec.javax.xml.soap:jboss-saaj-api_1.4_spec}">
            <!-- Do not use this resource if property jboss.saaj.api.1_3
                 is set to 'true'; instead the optional javax.xml.soap.api.1_3
                 module should be provided and this module will export its resources -->
            <conditions>
                <property-not-equal name="jboss.saaj.api.1_3" value="true"/>
            </conditions>
        </artifact>
    </resources>
</module>
